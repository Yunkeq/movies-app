@inject MoviesClient MovieClient
@inject NavigationManager Navigation

@rendermode InteractiveServer


<div class="modal fade" id="deleteModal-@Movie.Id" tabindex="-1" role="dialog" aria-labelledby="#Modal-@Movie.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Are you sure you want to delete this movie?</h5>
            </div>
            <div class="modal-body">
                <h1>@Movie.Name</h1>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" @onclick="@DeleteClick" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public Movie? Movie{ get; set; }

    // public static string GetModalId()
    // {
    //     Movi
    // }
    private async Task DeleteClick()
    {
        await MovieClient.DeleteMovieAsync(Movie.Id);
        Navigation.NavigateTo("/");
    }
}
